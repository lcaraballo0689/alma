# Configuración de Base de Datos para BodegApp
# Copiar este archivo como .env y configurar con tus valores reales

# Configuración del servidor SQL Server
DB_SERVER=localhost
DB_PORT=1433
DB_DATABASE=bodegapp_prod
DB_USER=tu_usuario_sql
DB_PASSWORD=tu_password_sql
DB_TRUSTCERTIFICATE=true

# Configuración del servidor Express
PORT=3001
NODE_ENV=development

# Configuración JWT (opcional)
JWT_SECRET=tu_secreto_jwt_aqui

# Configuración de Email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_email
